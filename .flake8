[flake8]
# Flake8 configuration for SGFA qMAP-PD project

# Maximum line length (match black default)
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    results,
    qMAP-PD_data,
    docs/_build

# Error codes to ignore
extend-ignore =
    E203,  # Whitespace before ':' (conflicts with black)
    E501,  # Line too long (handled by max-line-length)
    W503,  # Line break before binary operator (conflicts with black)
    F541,  # f-string without placeholders
    F841,  # Local variable assigned but never used

# Maximum complexity
max-complexity = 15

# Show source and statistics
show-source = True
count = True
statistics = True

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811
    conftest.py:F401